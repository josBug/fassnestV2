<view class="title-view">
  <van-toast id="van-toast" />
  <text class="title">买家信息</text>
  <van-cell-group>
    <van-field
      value="{{ name }}"
      label="买家微信名"
      placeholder="请输入买家名"
      clearable
      required
      error-message="{{ inputNameTag && name === '' ? '买家名不能为空' : '' }}"
      bind:change="onChangeName"
    />
  </van-cell-group>
  <text class="title">商品信息</text>  
  <van-cell-group>
    <van-field
      value="{{ goodsName }}"
      label="商品名"
      placeholder="请输入商品名"
      clearable
      required
      error-message="{{ inputGoodsNameTag && goodsName === '' ? '商品名不能为空' : ''  }}"
      bind:change="onChangeGoodsName"
    />
    <van-field
      value="{{ code }}"
      label="货号"
      placeholder="请输入货号"
      clearable
      bind:change="onChangeCode"
    />
    <van-field
      value="{{ tips }}"
      label="代购费"
      placeholder="请输入代购费"
      clearable
      required
      type="digit"
      error-message="{{ inputTipsTag && (tips === '' || tips === 0) ? '代购费不能为空' : ''  }}"
      bind:change="onChangeTips"
    />
    <van-field
      value="{{ color }}"
      label="颜色"
      placeholder="请输入颜色"
      clearable
      bind:change="onChangeColor"
    />
    <van-field
      value="{{ oldPrice }}"
      label="原价"
      placeholder="请输入价格"
      clearable
      required
      type="digit"
      error-message="{{ inputOldPriceTag && (oldPrice === '' || oldPrice === 0) ? '原价不能为空' : ''  }}"
      bind:change="onChangeOldPrice"
    />
    <van-field
      value="{{ amount }}"
      label="数量"
      placeholder="请输入数量"
      clearable
      required
      type="number"
      error-message="{{ inputAmountTag && (amount === '' || amount === 0) ? '数量不能为空' : ''  }}"
      bind:change="onChangeNumbers"
    />
    <van-field
      value="{{ remark }}"
      label="备注"
      placeholder="请输入备注"
      clearable
      bind:change="onChangeRemark"
    />

    <picker bindchange="bindPickerChange" value="{{pickIndex}}" range="{{arrayPicker}}">
    <van-cell
      title="来源: {{ arrayPicker[pickIndex] }}"
      is-link
    />
    </picker>
    <van-switch-cell
      title="是否发货"
      checked="{{ send === 1 }}"
      bind:change="onChangeSend"
    />
    <van-switch-cell
      title="是否支付"
      checked="{{ isPay === 1 }}"
      bind:change="onChangeIsPay"
    />
  </van-cell-group>
    <view class="btn-view">
  </view>
  <van-button custom-class="search-btn-back" type="primary" size="large" bind:click="onClickSave">{{ btnText }}</van-button>
  <view class="btn-view-bottom">
  </view>
  <van-button custom-class="search-btn-back" type="danger" size="large" bind:click="onclickCancel">取消</van-button>
</view>